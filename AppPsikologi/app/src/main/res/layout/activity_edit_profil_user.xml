<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_Profil_User">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/warna4"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"
        app:title="Edit Profile"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints"


        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_dashboard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/idCIVfoto"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/people" />

                <TextView
                    android:id="@+id/idTVEditFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit Foto"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="15dp"
                    android:layout_marginBottom="8dp"
                    />


            </LinearLayout>


                <TextView
                    android:id="@+id/idTVnamautama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="12dp"
                    android:layout_marginBottom="8dp"
                    />

                <EditText
                    android:id="@+id/idETnama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:hint="Masukkan Nama Anda"
                    android:textSize="15dp"
                    android:padding="14dp"
                    android:background="@drawable/textedit"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    />
                <EditText
                    android:id="@+id/idETemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:hint="Masukkan Email Anda"
                    android:textSize="15dp"
                    android:padding="14dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/textedit"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usia"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    />
                <EditText
                    android:id="@+id/idETUmur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:hint="Masukkan Usia Anda"
                    android:textSize="15dp"
                    android:padding="14dp"
                    android:background="@drawable/textedit"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin"
                    android:layout_gravity="start"
                    android:layout_marginHorizontal="18dp"
                    android:textSize="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="12dp"
                    />
                <EditText
                    android:id="@+id/idETJenisKelamin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="18dp"
                    android:hint="Masukkan Jenis Kelamin Anda"
                    android:textSize="15dp"
                    android:padding="14dp"
                    android:background="@drawable/textedit"
                    />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/idBTNUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:text="Simpan Perubahan"
                android:layout_marginTop="40dp"
                android:paddingVertical="16dp"
                android:textColor="#fff"
                android:background="@drawable/btn_update"
                />

            <EditText
                android:id="@+id/idETIdUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:hint="Masukkan Jenis Kelamin Anda"
                android:layout_marginTop="200dp"
                android:textSize="2dp"
                android:padding="14dp"
                />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>