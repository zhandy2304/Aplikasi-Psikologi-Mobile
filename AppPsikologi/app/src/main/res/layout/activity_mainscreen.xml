<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:focusable="false"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abumuda"
    tools:context=".mainscreen">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_dashboard" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/idLL1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fb"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/people" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Hello,"
                    android:textColor="@color/black"
                    android:textSize="70px" />

                <TextView
                    android:id="@+id/idTVusername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Zhandy"
                    android:textColor="@color/black"
                    android:textSize="90px" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <ImageView
                    android:id="@+id/idIVinfo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_info_24"
                    />

            </LinearLayout>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/idLL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idLL1"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_form"
                    android:drawableStart="@drawable/logo_cari"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="   Cari penyakit psikologi"
                    android:paddingStart="20dp"
                    android:paddingLeft="10dp"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/idLL3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button2"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/image5" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="How to"
                        android:textColor="@color/white"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Manage Your Anxiety"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:background="@drawable/bg_penyakit"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Read More"
                        android:textAllCaps="false"
                        android:textColor="@color/warna2"
                        android:textSize="8dp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idLL2"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="What do you need?"
                        android:textColor="@color/black"
                        android:textSize="15dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/idIVpsikeater"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/button_psikeater" />

                    <ImageView
                        android:id="@+id/idIVmaps"
                        android:layout_width="170dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/button_maps" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idLL2"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Penyakit psikologi"
                        android:textColor="@color/black"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/bg_penyakit"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:showDividers="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Depresi"
                                    android:textColor="@color/black"
                                    android:textSize="35px" />


                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="80dp"
                                    android:layout_marginVertical="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/a" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/bg_penyakit"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:showDividers="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Skizofrenia"
                                    android:textColor="@color/black"
                                    android:textSize="35px" />


                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="80dp"
                                    android:layout_marginVertical="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/b1" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/bg_penyakit"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:showDividers="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Gangguan Kecemasan"
                                    android:textColor="@color/black"
                                    android:textSize="35px" />


                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="80dp"
                                    android:layout_marginVertical="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/c1" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="170dp"
                                android:layout_height="150dp"
                                android:layout_marginHorizontal="5dp"
                                android:background="@drawable/bg_penyakit"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:showDividers="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semibold"
                                    android:text="Gangguan Bipolar"
                                    android:textColor="@color/black"
                                    android:textSize="35px" />


                                <ImageView
                                    android:layout_width="140dp"
                                    android:layout_height="80dp"
                                    android:layout_marginVertical="5dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/d1" />


                            </LinearLayout>


                        </LinearLayout>


                    </HorizontalScrollView>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

</RelativeLayout>

</ScrollView>